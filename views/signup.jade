extends layout

block content
	h1= title
	div(class='container')
		div(class='row')
			div(class='col-sm-6 center-block ')
				form(action="/users/signup", method='post')
					div(class='form-group')
						label(for='name') Usuario
						input(id='name', name='name', type='email', class='form-control')
					div(class='form-group')
						label(for='password') Contraseña
						input(id='password', name='password', type='password', class='form-control')
					div(class='form-group')
						label(for='passwordconfirm') Confirmar Contraseña
						input(id='passwordconfirm', name='passwordconfirm', type='password', class='form-control')
					input(type='submit', value='Registrarme', class='btn btn-primary')